{
	"contexts": [
		{
			"type": "post",
			"post_types": [ "post" ],
			"title": { "__": "Article Settings" }
		}
	],
	"serialize_data": false,
	"add_to_prefix": false,
	"tabbed": "vertical",
	"children": {
		"settings": {
			"label": { "__": "Settings" },
			"serialize_data": false,
			"add_to_prefix": false,
			"children": {
				"primary_category_id": {
					"label": { "__": "Primary Category" },
					"type": "select",
					"description": { "__": "Begin typing to select a primary category." },
					"datasource": {
						"type": "term",
						"taxonomy": "category",
						"taxonomy_save_to_terms": false,
						"only_save_to_taxonomy": false
					}
				}
			}
		},
		"featured_media": {
			"label": { "__": "Featured Media" },
			"serialize_data": false,
			"add_to_prefix": false,
			"children": {
				"disable_image": {
					"label": { "__": "Hide Featured Image" },
					"type": "checkbox"
				},
				"youtube_url": {
					"label": { "__": "YouTube URL" },
					"description": { "__": "Display this video at the top of the page." },
					"type": "link"
				}
			}
		},
		"social_and_seo": {
			"label": { "__": "SEO and Social" },
			"serialize_data": false,
			"add_to_prefix": false,
			"children": {
				"seo": {
					"label": { "__": "SEO Settings" },
					"serialize_data": false,
					"add_to_prefix": false,
					"collapsed": true,
					"children": {
						"_meta_title": {
							"label": { "__": "Title Tag" }
						},
						"_meta_description": {
							"label": { "__": "Meta Description" },
							"type": "textarea",
							"attributes": {
								"style": "width: 100%;",
								"rows": 5
							}
						},
						"_meta_keywords": {
							"label": { "__": "Meta Keywords" },
							"type": "textarea",
							"attributes": {
								"style": "width: 100%;",
								"rows": 5
							}
						}
					}
				},
				"social": {
					"label": { "__": "Social Media Settings" },
					"serialize_data": false,
					"add_to_prefix": false,
					"collapsed": true,
					"children": {
						"social_title": {
							"label": { "__": "Social Title" }
						},
						"social_description": {
							"label": { "__": "Social Description" },
							"type": "textarea",
							"attributes": {
								"style": "width: 100%;",
								"rows": 5
							}
						},
						"social_image_id": {
							"label": { "__": "Social Image" },
							"type": "media"
						}
					}
				},
				"advanced_settings": {
					"label": { "__": "Advanced Settings" },
					"serialize_data": false,
					"add_to_prefix": false,
					"collapsed": true,
					"children": {
						"canonical_url": {
							"label": { "__": "Canonical Url" },
							"description": { "__": "This is the original URL of syndicated content." }
						},
						"de_index_google": {
							"label": { "__": "De-index in search engines" },
							"description": { "__": "This will prevent search engines from indexing this content." },
							"type": "checkbox"
						}
					}
				}
			}
		}
	}
}
