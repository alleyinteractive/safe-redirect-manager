{
	"contexts": [
		{
			"type": "post",
			"post_types": [ "podcast-post", "show-post" ],
			"title": { "__": "Settings" }
		}
	],
	"serialize_data": false,
	"add_to_prefix": false,
	"tabbed": "vertical",
	"children": {
		"settings": {
			"label": { "__": "Settings" },
			"serialize_data": false,
			"add_to_prefix": false,
			"children": {
				"section_id": {
					"label": { "__": "Section" },
					"type": "select",
					"description": { "__": "Select a section." },
					"datasource": {
						"type": "term",
						"taxonomy": "section",
						"taxonomy_save_to_terms": true,
						"only_save_to_taxonomy": true
					}
				},
				"teaser": {
					"label": { "__": "Podcast/Show Teaser" },
					"type": "textarea"
				},
				"description": {
					"label": { "__": "Podcast/Show Description" },
					"type": "richtextarea",
					"buttons_1": [ "bold", "italic", "link" ],
					"buttons_2": [],
					"sanitize": "wp_filter_post_kses",
					"editor_settings": {
						"media_buttons": false
					},
					"attributes": {
						"style": "width: 100%",
						"rows": 4
					}
				},
				"times": {
					"label": { "__": "Podcast/Show Times" }
				}
			}
		},
		"subscribe": {
			"label": { "__": "Subscribe" },
			"children": {
				"buttons": {
					"label": { "__": "Subscribe Buttons" },
					"limit": 0,
					"add_more_label": { "__": "Add Button" },
					"extra_elements": 0,
					"sortable": true,
					"children": {
						"label": {
							"label": { "__": "Label" }
						},
						"link": {
							"label": { "__": "Link" },
							"type": "link"
						}
					}
				}
			}
		},
		"highlighted_episodes": {
			"label": { "__": "Highlighted Episodes" },
			"children": {
				"content_item_ids": {
					"label": { "__": "Highlighted Episodes" },
					"type": "`Fieldmanager_Zone_Field`",
					"post_limit": 4,
					"query_args": "`\\CPR\\Components\\Templates\\Podcast_And_Show::get_highlighted_episodes_query_args()`"
				}
			}
		},
		"hosts": {
			"label": { "__": "Hosts" },
			"children": "`\\CPR\\Components\\Modules\\Grid_Group::get_fm_fields()`"
		},
		"social_and_seo": {
			"label": { "__": "SEO and Social" },
			"serialize_data": false,
			"add_to_prefix": false,
			"children": {
				"seo": {
					"label": { "__": "SEO Settings" },
					"serialize_data": false,
					"add_to_prefix": false,
					"collapsed": true,
					"children": {
						"_meta_title": {
							"label": { "__": "Title Tag" }
						},
						"_meta_description": {
							"label": { "__": "Meta Description" },
							"type": "textarea",
							"attributes": {
								"style": "width: 100%;",
								"rows": 5
							}
						},
						"_meta_keywords": {
							"label": { "__": "Meta Keywords" },
							"type": "textarea",
							"attributes": {
								"style": "width: 100%;",
								"rows": 5
							}
						}
					}
				},
				"social": {
					"label": { "__": "Social Media Settings" },
					"serialize_data": false,
					"add_to_prefix": false,
					"collapsed": true,
					"children": {
						"social_title": {
							"label": { "__": "Social Title" }
						},
						"social_description": {
							"label": { "__": "Social Description" },
							"type": "textarea",
							"attributes": {
								"style": "width: 100%;",
								"rows": 5
							}
						},
						"social_image_id": {
							"label": { "__": "Social Image" },
							"type": "media"
						}
					}
				}
			}
		}
	}
}
