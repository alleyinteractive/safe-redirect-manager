{
	"contexts": [
		{
			"type": "post",
			"post_types": [ "guest-author" ],
			"title": "Info",
			"context": "normal",
			"priority": "high"
		}
	],
	"serialize_data": false,
	"add_to_prefix": false,
	"children": {
		"cap-user_email": {
			"type": "text",
			"label": { "__": "Email" }
		},
		"title": {
			"type": "text",
			"label": { "__": "Title" }
		},
		"twitter": {
			"type": "text",
			"label": { "__": "Twitter" },
			"sanitize": "`function( $value ) { return str_replace( '@', '', $value ); }`"
		},
		"short_bio": {
			"type": "text",
			"label": { "__": "Short Bio" },
			"description": { "__": "This will be displayed on articles and the author archive." }
		},
		"description": {
			"label": { "__": "Long Bio" },
			"type": "richtextarea",
			"buttons_1": [ "bold", "italic", "link" ],
			"buttons_2": [],
			"sanitize": "wp_filter_post_kses",
			"editor_settings": {
				"media_buttons": false
			},
			"attributes": {
				"style": "width: 100%",
				"rows": 4
			}
		},
		"type": {
			"label": { "__": "Type" },
			"type": "select",
			"options": {
				"author": { "__": "Author" },
				"host": { "__": "Host" }
			}
		}
	}
}
